# Database
MONGODB_URI=mongodb://localhost:27017/reader-support

# AI Provider Configuration
# Options: 'openai', 'anthropic', 'both'
AI_PROVIDER=anthropic

# For fallback mode ('both') - specify primary provider
PRIMARY_AI_PROVIDER=anthropic

# OpenAI Configuration
OPENAI_API_KEY=sk-your-openai-key-here
OPENAI_MODEL=gpt-3.5-turbo

# Anthropic Configuration  
ANTHROPIC_API_KEY=sk-ant-your-anthropic-key-here
ANTHROPIC_MODEL=claude-3-haiku-20240307

# Vector Database (Qdrant)
VECTOR_DB_URL=http://localhost:6333
VECTOR_DB_TYPE=qdrant

# For embeddings (required for RAG)
# Options: 'openai' (recommended for best compatibility with Qdrant)
EMBEDDINGS_PROVIDER=openai

# Enable RAG (Retrieval Augmented Generation)
ENABLE_RAG=true

# Server Configuration
PORT=3000
NODE_ENV=development

# Admin Authentication
ADMIN_USERNAME=admin
ADMIN_PASSWORD=password123

# Telegram Bot Configuration
TELEGRAM_BOT_TOKEN=your-telegram-bot-token-here
TELEGRAM_MAX_MESSAGE_LENGTH=4096

# Logging
LOG_LEVEL=info

# Performance
CHUNK_SIZE=1000
CHUNK_OVERLAP=200

# Rate Limiting
RATE_LIMIT_WINDOW_MS=60000
RATE_LIMIT_MAX_REQUESTS=100