# Reader Bot Environment Variables
# Скопируйте этот файл как .env и измените значения

# Порт сервера (по умолчанию 3002)
PORT=3000

# MongoDB connection
MONGODB_URI=mongodb://localhost:27017/reader_bot

# AI Provider (anthropic или openai)
AI_PROVIDER=anthropic
ANTHROPIC_API_KEY=your_anthropic_key_here
OPENAI_API_KEY=your_openai_key_here

# Telegram Bot (для уведомлений и отчетов)
TELEGRAM_BOT_TOKEN=your_telegram_bot_token
ADMIN_TELEGRAM_ID=your_admin_telegram_id

# Админ панель
ADMIN_USERNAME=admin
ADMIN_PASSWORD=your_secure_password

# Окружение (development, production)
NODE_ENV=development

# Дополнительные настройки
ENABLE_RAG=false
ENABLE_CRON=true
ENABLE_ANALYTICS=true

