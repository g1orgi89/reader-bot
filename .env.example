# Reader Bot Environment Variables
# Скопируйте этот файл как .env и измените значения

# Сервер
PORT=3002
NODE_ENV=development

# MongoDB connection (используйте ваши реальные настройки)
MONGODB_URI=mongodb://localhost:27017/reader_bot

# AI Provider (claude, anthropic, or openai)
# Note: 'anthropic' will be normalized to 'claude'
AI_PROVIDER=openai

# AI API Keys (configure based on your chosen provider)
# For Claude/Anthropic provider, set ANTHROPIC_API_KEY
ANTHROPIC_API_KEY=your_anthropic_key_here
# For OpenAI provider, set OPENAI_API_KEY  
OPENAI_API_KEY=your_openai_key_here

# AI Model configurations (optional, defaults are recommended)
# OpenAI model (default: gpt-4o-mini)
OPENAI_MODEL=gpt-4o-mini
# Claude model (default: claude-3-haiku-20240307)  
CLAUDE_MODEL=claude-3-haiku-20240307

# Simple Bot Configuration (новый упрощенный бот)
ENABLE_SIMPLE_BOT=false
APP_WEBAPP_URL=https://app.unibotz.com/mini-app/
BOT_NOTIFICATIONS_SECRET=generate_new_random_secret_for_notifications

# Безопасность (ВАЖНО: Создайте новые случайные ключи)
# Используйте: node -e "console.log(require('crypto').randomBytes(64).toString('hex'))"
JWT_SECRET=generate_new_random_jwt_secret_64_chars_minimum
SESSION_SECRET=generate_new_random_session_secret_32_chars_minimum
ADMIN_TOKEN=generate_new_random_admin_token
API_KEYS=generate_new_api_key_1,generate_new_api_key_2

# Админ панель
ADMIN_USERNAME=admin
ADMIN_PASSWORD=create_secure_password_here

# Дополнительные настройки
ENABLE_RAG=false
ENABLE_CRON=true
ENABLE_ANALYTICS=true

# Business Timezone Configuration
# BUSINESS_TZ_OFFSET_MIN: Business timezone offset in minutes from UTC
# Default: 180 (UTC+3 for Moscow/Europe time)
# Examples: 180 for MSK, 120 for EET, 60 for CET, 0 for UTC
BUSINESS_TZ_OFFSET_MIN=180

# Weekly Report Catch-up Service
# CATCHUP_LOOKBACK_WEEKS: Number of weeks to look back for missing reports
# Default: 8 weeks
CATCHUP_LOOKBACK_WEEKS=8

# Email настройки (если используется)
SMTP_HOST=your_smtp_host
SMTP_PORT=587
SMTP_USER=your_email_user
SMTP_PASS=your_email_password

# Redis (если используется для кеширования)
REDIS_URL=redis://localhost:6379

# Дополнительные настройки безопасности
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100
CORS_ORIGIN=http://localhost:3002