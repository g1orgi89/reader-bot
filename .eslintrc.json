{
  "env": {
    "node": true,
    "es2021": true,
    "jest": true,
    "browser": true
  },
  "extends": [
    "eslint:recommended"
  ],
  "parserOptions": {
    "ecmaVersion": 2021,
    "sourceType": "module"
  },
  "rules": {
    "no-console": "off",
    "no-unused-vars": ["error", { "argsIgnorePattern": "^_" }],
    "no-undef": "error",
    "prefer-const": "error",
    "no-var": "error"
  },
  "globals": {
    "window": "readonly",
    "document": "readonly",
    "localStorage": "readonly",
    "fetch": "readonly",
    "FormData": "readonly",
    "URLSearchParams": "readonly",
    "location": "readonly",
    "alert": "readonly",
    "confirm": "readonly"
  },
  "ignorePatterns": [
    "node_modules/",
    "coverage/",
    "dist/",
    "build/",
    "*.min.js"
  ]
}