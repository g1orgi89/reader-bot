# Environment Variables для Telegram Mini App "Читатель"

# Backend API URL
API_BASE_URL=https://your-domain.com/api/reader

# Telegram Bot Configuration
TELEGRAM_BOT_TOKEN=your_bot_token_here
TELEGRAM_MINI_APP_URL=https://your-domain.com/client/mini-app

# Development settings
ENVIRONMENT=development
DEBUG_MODE=true
MOCK_DATA=true

# Analytics (optional)
GTM_ID=GTM-XXXXXXX
YANDEX_METRICA_ID=12345678

# PWA Settings
APP_NAME="Читатель"
APP_SHORT_NAME="Читатель"
APP_DESCRIPTION="Персональный дневник цитат от Анны Бусел"
APP_THEME_COLOR=#6366f1
APP_BACKGROUND_COLOR=#ffffff

# Features flags
ENABLE_PUSH_NOTIFICATIONS=false
ENABLE_OFFLINE_MODE=true
ENABLE_ANALYTICS=false
ENABLE_ERROR_REPORTING=false

# Cache settings
CACHE_VERSION=v1.0.0
CACHE_MAX_AGE=86400

# Security
CSP_ENABLED=true
HTTPS_ONLY=true

# Performance
LAZY_LOADING=true
IMAGE_OPTIMIZATION=true
COMPRESSION=true