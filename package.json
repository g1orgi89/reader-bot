{
  "name": "reader-bot",
  "version": "1.0.0",
  "description": "AI бот 'Читатель' для Анны Бусел - персональный дневник цитат с аналитикой и рекомендациями книг",
  "main": "reader-bot.js",
  "scripts": {
    "start": "node server/index.js",
    "start:reader": "node reader-bot.js",
    "dev": "nodemon server/index.js",
    "dev:reader": "nodemon reader-bot.js",
    "dev:debug": "nodemon --inspect server/index.js",
    "telegram": "node telegram/start.js",
    "telegram:dev": "nodemon telegram/start.js",
    "migrate:content": "node scripts/migrateContent.js",
    "seed:books": "node scripts/seedBooks.js",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:db": "node test-mongodb-simple.js",
    "test:docker": "node test-mongodb-docker.js",
    "test:core": "node test-core.js",
    "test:claude": "node test-claude.js",
    "test:api": "node test-api-quick.js",
    "diagnose": "node diagnose-mongodb.js",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "migrate": "node scripts/dbMigration.js",
    "export-reports": "node scripts/exportReports.js",
    "deploy": "npm run lint && npm test && npm run build",
    "build": "echo 'Building project...' && npm run lint",
    "check-health": "curl -f http://localhost:3000/api/health || exit 1",
    "setup": "npm install && cp .env.example .env && echo 'Setup complete! Please edit .env file'",
    "setup:reader": "npm run migrate:content && npm run seed:books && echo 'Reader bot content setup complete!'",
    "start:prod": "NODE_ENV=production node server/index.js",
    "start:reader:prod": "NODE_ENV=production node reader-bot.js",
    "start:telegram:prod": "NODE_ENV=production node telegram/start.js",
    "logs": "tail -f logs/combined.log",
    "logs:error": "tail -f logs/error.log"
  },
  "keywords": [
    "ai",
    "chatbot",
    "reader",
    "quotes",
    "books",
    "psychology",
    "analytics",
    "claude",
    "telegram",
    "recommendations",
    "anna-busel",
    "book-club"
  ],
  "author": "Anna Busel Book Club Team",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/g1orgi89/reader-bot.git"
  },
  "bugs": {
    "url": "https://github.com/g1orgi89/reader-bot/issues"
  },
  "homepage": "https://github.com/g1orgi89/reader-bot#readme",
  "dependencies": {
    "@anthropic-ai/sdk": "^0.20.7",
    "@langchain/anthropic": "^0.3.20",
    "@langchain/community": "^0.0.43",
    "@langchain/openai": "^0.0.28",
    "@qdrant/js-client-rest": "^1.14.0",
    "axios": "^1.6.2",
    "bcryptjs": "^2.4.3",
    "compression": "^1.7.4",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "express-rate-limit": "^7.1.5",
    "express-validator": "^7.0.1",
    "helmet": "^7.1.0",
    "jsonwebtoken": "^9.0.2",
    "langchain": "^0.0.205",
    "mongoose": "^7.5.0",
    "morgan": "^1.10.0",
    "multer": "^1.4.5-lts.1",
    "openai": "^4.100.0",
    "pdf-parse": "^1.1.1",
    "pdfjs-dist": "^3.11.174",
    "socket.io": "^4.7.2",
    "telegraf": "^4.12.2",
    "uuid": "^9.0.0",
    "winston": "^3.11.0",
    "xlsx": "^0.18.5"
  },
  "devDependencies": {
    "@types/node": "^20.5.0",
    "concurrently": "^8.2.0",
    "eslint": "^8.47.0",
    "eslint-plugin-jsdoc": "^46.8.2",
    "jest": "^29.6.2",
    "mongodb-memory-server": "^9.1.3",
    "nodemon": "^3.0.1",
    "supertest": "^6.3.3"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=8.0.0"
  },
  "os": [
    "linux",
    "darwin",
    "win32"
  ],
  "jest": {
    "testEnvironment": "node",
    "roots": [
      "<rootDir>/tests"
    ],
    "testMatch": [
      "**/*.test.js"
    ],
    "collectCoverageFrom": [
      "server/**/*.js",
      "telegram/**/*.js",
      "!server/index.js",
      "!**/*.test.js",
      "!**/node_modules/**"
    ],
    "coverageDirectory": "coverage",
    "coverageReporters": [
      "text",
      "lcov",
      "html"
    ],
    "setupFilesAfterEnv": [
      "<rootDir>/tests/setup.js"
    ],
    "testTimeout": 30000
  },
  "eslintConfig": {
    "env": {
      "node": true,
      "es2021": true,
      "jest": true
    },
    "extends": [
      "eslint:recommended",
      "plugin:jsdoc/recommended"
    ],
    "parserOptions": {
      "ecmaVersion": 12,
      "sourceType": "module"
    },
    "rules": {
      "no-console": "off",
      "jsdoc/require-description": "error",
      "jsdoc/require-param-description": "error",
      "jsdoc/require-returns-description": "error"
    }
  },
  "nodemonConfig": {
    "watch": [
      "server/",
      "telegram/",
      "reader-bot.js",
      ".env"
    ],
    "ext": "js,json",
    "ignore": [
      "logs/",
      "node_modules/",
      "client/"
    ],
    "env": {
      "NODE_ENV": "development"
    }
  }
}